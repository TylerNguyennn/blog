---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug"

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there ðŸ‘‹</div>
    <div class="text-5xl font-bold">I'm MinHee</div>
    <div class="text-3xl py-3 font-bold">Psychologist and Lifestyle Blogger</div>
    <div class="py-2">
      <text class="text-lg">
        Welcome to my space where psychology meets lifestyle! I'm passionate about helping people understand their minds 
        and live their best lives. Through my blog, I share insights on mental wellness, personal growth, and practical 
        tips for a balanced lifestyle. Join me on this journey of self-discovery and empowerment!
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="mailto:contact@minhee.com" target="_blank"> Let's connect!</a>
      <a href="/blog" class="btn btn-outline ml-5">
        Read My Blog
      </a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">Featured Content</div>
  </div>

  <HorizontalCard
    title="Mental Wellness Guide"
    img="/post_img.webp"
    desc="A comprehensive guide to understanding and maintaining your mental health through daily practices and mindful living."
    url="/blog"
    badge="FEATURED"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Lifestyle Balance Tips"
    img="/post_img.webp"
    desc="Practical strategies for creating a harmonious balance between work, relationships, and personal growth."
    url="/blog"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Psychology Insights"
    img="/post_img.webp"
    desc="Explore the fascinating world of human psychology and how understanding your mind can transform your life."
    url="/blog"
    badge="POPULAR"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + createSlug(post.data.title, post.slug)}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
